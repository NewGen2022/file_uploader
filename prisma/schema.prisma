generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Session {
    id        String   @id
    sid       String   @unique
    data      String
    expiresAt DateTime
}

model User {
    id          String      @id @default(uuid())
    username    String      @unique
    password    String
    role        Role        @default(BASIC)
    directories Directory[]
}

model Directory {
    id        String      @id @default(uuid())
    name      String
    type      DocTypes    @default(DIRECTORY)
    createdAt DateTime    @default(now())
    user      User        @relation(fields: [userId], references: [id])
    userId    String
    files     File[]
    parent    Directory?  @relation("DirectoryChildren", fields: [parentId], references: [id]) // Link to parent dir
    parentId  String?
    children  Directory[] @relation("DirectoryChildren")

    @@unique([parentId, name], name: "unique_name_in_parent_dir")
}

model File {
    id           String    @id @default(uuid())
    name         String
    size         Float
    extension    String    @default("")
    type         DocTypes  @default(FILE)
    createdAt    DateTime  @default(now())
    directory    Directory @relation(fields: [directoryId], references: [id])
    directoryId  String
    path         String?
    cloudinaryId String?

    @@unique([directoryId, name], name: "unique_name_in_directory")
}

enum Role {
    BASIC
    ADMIN
}

enum DocTypes {
    FILE
    DIRECTORY
}
