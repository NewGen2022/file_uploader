<div id="addDirForm" class="modal">
    <form action="/directory/create/new" method="POST">
        <h3 class="create-text">New Directory</h3>
        <label for="dirName">Name</label>
        <input type="text" id="dirName" name="dirName" required />
        <div class="actions">
            <button type="submit" id="createDirBtn">Create</button>
            <button type="button" class="cancel-btn" id="cancelDirBtn">
                Cancel
            </button>
        </div>
        <input type="hidden" name="parentId" value="<%= currentDirId %>" />
    </form>
</div>
